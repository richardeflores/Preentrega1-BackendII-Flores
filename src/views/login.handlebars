<head>
    <link rel="stylesheet" href="/css/styles.css" />
    <script defer src="./js/loginScript.js"></script>
</head>
<body>
    <div class="login-container">
        <h1>Iniciar Sesión</h1>
        <form id="loginForm">
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" required />
            </div>
            <button id="localLogin" type="submit">Iniciar Sesión</button>
        </form>

        <div class="social-login">
            <a href="/api/auth/login-google">
                <button id="googleLogin">Iniciar con Google</button>
            </a>
        </div>

        <div class="register-link">
            <p>¿No tienes cuenta? <a href="/register" id="showRegisterForm">Regístrate aquí</a></p>
        </div>

        <div id="message"></div>
        <!-- Div para mostrar mensajes -->
    </div>
</body>